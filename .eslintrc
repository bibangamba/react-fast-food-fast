{
    "extends": "airbnb",
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "parser": "babel-eslint",
    "rules": {
        "quotes": [2, "double", {
            "avoidEscape": true
        }],
        "trailing-comma": [true, {
            "singleline": "ignore",
            "multiline": {
                "objects": "ignore",
                "arrays": "ignore",
                "functions": "ignore",
                "typeLiterals": "ignore"
            }
        }],
        "comma-dangle": ["error", "never"]
    }
}
